{% extends "base.html.twig" %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-md-8 col-md-offset-2">
            <div class="form-container">

                <p class="page-heading">Užsiregistruok!</p>
                <p>Užpildyk žemiau esančius laukus:</p>

                {{ form_start(form, {'action': path('user_employer_registration'), 'method': 'POST', 'attr': {'novalidate': 'novalidate'} }) }}

                    {{ form_row(form.title) }}

                    {{ form_row(form.legalEntitysCode) }}

                    {{ form_row(form.email) }}

                    {{ form_row(form.plainPassword.first) }}

                    {{ form_row(form.plainPassword.second) }}

                    <small>* Pažymėti laukai turi būti užpildyti</small>

                    <input type="hidden" name="role" value="ROLE_USER_EMPLOYER">

                    <div class="text-center">
                        <button class="btn btn-primary">Registruokis</button>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>

    </div>
{% endblock body %}
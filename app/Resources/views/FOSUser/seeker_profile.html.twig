<div class="container">
    <div class="content-container">

        <a class="form-upper-btn" href="{{ path('fos_user_profile_edit') }}">Redaguoti</a>

        <div class="row">
            <div class="col-md-4 col-sm-6">
                <img class="img-responsive profile-img"
                     src="{{ asset('img/profiles/'~app.user.photo ?? 'no-photo.jpg') }}" alt="Nuotrauka">
            </div>
            <div class="col-md-8 col-sm-6">
                <ul class="profile-list">
                    <li class="profile-user-name">{{ app.user.name|raw }} {{ app.user.surname|raw }}</li>
                    <li>{{ app.user.email|raw }}</li>
                    <li>{{ app.user.phone|raw }}</li>
                    <li>{{ app.user.city|raw }}</li>
                </ul>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <p class="section-heading profile-heading">Gebėjimai</p>
                <div>
                    {% for skill in app.user.skills %}
                        <span class="skill">{{ skill.title|raw }}</span>
                    {% endfor %}
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <p class="section-heading profile-heading">Trumpas prisistatymas</p>
                <p>{{ app.user.introduction|raw }}</p>
            </div>
        </div>
        {% if app.user.jobApply %}
            <div class="row">
                <div class="col-md-6">
                    <p class="section-heading profile-heading">Pozicijos į kurias kandidatavau</p>
                    <ul class="profile-list">
                        {% for jobApply in app.user.jobApply %}
                            <li class="profile-jobapply-list-item">
                                <a href="{{ path('jobad_show', {'id': jobApply.jobAd.id}) }}" target="_blank">{{ jobApply.jobAd.title|raw }}</a>
                                <span>| {{ jobApply.jobAd.owner.title|raw }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="col-md-6">
                    <p class="section-heading profile-heading">Įvertinimai</p>
                    <ul class="profile-list">
                        {% for jobApply in app.user.jobApply %}
                            {% if jobApply.evaluation %}
                            <li class="profile-jobapply-list-item">
                                <span class="mark">{{ jobApply.evaluation.mark|raw }}</span>
                                <span class="comment">{{ jobApply.evaluation.comment|raw }}</span>
                            </li>
                            {% else %}
                            <li class="profile-jobapply-list-item">Šiuo metu įvertinimų neturite</li>
                            {% endif %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
        {% endif %}
    </div>
</div>
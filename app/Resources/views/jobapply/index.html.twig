{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="content-container">
            <p class="page-heading">Kandidatai į poziciją: {{ jobAd.title|raw }}</p>

            <a class="form-upper-btn" href="{{ app.request.headers.get('referer') }}">Grįžti atgal</a>

            {% for jobApply in jobApplies %}
                <div class="row-list">
                    <div class="row">
                        <div class="col-md-4">
                            <img class="img-responsive profile-img img-center"
                                 src="{{ asset('img/profiles/'~jobApply.owner.photo ?? 'no-photo.jpg') }}"
                                 alt="Nuotrauka">
                        </div>
                        <div class="col-md-4">
                            <ul class="profile-list">
                                <li>
                                    <a class="candidates-list-heading" href="{{ path('user_seeker_show', {'id' : jobApply.owner.id}) }}">
                                    {{ jobApply.owner.name|raw }} {{ jobApply.owner.surname|raw }}</a>
                                </li>
                                <li>Amžius: {{ jobApply.owner.birthDay|age }}</li>
                                <li>{{ jobApply.owner.city|raw }}</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <ul class="profile-list assignment-list">
                                <li>
                                    <a href="{{ jobApply.assignmentSolution ?? '#' }}">Užduoties sprendimas</a>
                                </li>
                                {% if jobApply.cv %}
                                <li>
                                    <a href=" {{ asset('files/cv/'~jobApply.cv ?? '#') }}" target="_blank">Gyvenimo aprašymas</a>
                                </li>
                                {% endif %}
                                {% if jobApply.evaluation %}
                                    <li class="assignment-evaluation">Mano įvertinimas: {{ jobApply.evaluation.mark|raw }}</li>
                                    <li>
                                        <a class="btn btn-primary" href="{{ path('evaluation_edit', {'id' : jobApply.evaluation.id}) }}">Redaguoti įvertinimą</a>
                                    </li>
                                {% else %}
                                    <li>
                                        <a href="{{ path('evaluation_new', {'apply_id' : jobApply.id}) }}" class="btn btn-primary">Įvertink kandidatą!</a>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}